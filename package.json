{
  "name": "rat",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "git config --local core.hooksPath .githooks && chmod +x .githooks/pre-commit",
    "lint": "oxlint -D suspicious -D pedantic -D perf --deny-warnings .",
    "format": "oxfmt --write \"packages/**/*.ts\" \"*.ts\"",
    "format:check": "oxfmt --check \"packages/**/*.ts\" \"*.ts\"",
    "test:vim": "bun test vim/rat_vim.test.ts",
    "compile": "./scripts/compile-all-platforms.sh",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@rat/core": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/mdast": "^4.0.4",
    "@types/unist": "^3.0.3",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0",
    "typescript": "^5.9.2"
  }
}
